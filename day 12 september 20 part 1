//Write a program to calculate electricity bill based on units consumed with these rates: First 100 units at ₹5/unit Next 100 units at ₹7/unit Next 100 units at ₹10/unit Above at ₹12/unit
#include<stdio.h>
int main() {
    int d, f = 0;
    printf("Enter the number of days you are late : ");
    scanf("%d", &d);
    if (d <= 0) {
        printf("There is no fine.\nThe book was returned on time");
    }
    else if (d <= 5) {
        f = d * 2;
        printf("Fine = ₹%d\n", f);
    }
    else if (d <= 10) {
        f = (5 * 2) + (d - 5) * 4;
        printf("Fine = ₹%d\n", f);
    }
    else if (d <= 30) {
        f = (5 * 2) + (5 * 4) + (d - 10) * 6;
        printf("Fine = ₹%d\n", f);
    }
    else {
        printf("The membership is cancelled!");
    }
    return 0;
}
